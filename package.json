{
  "name": "enterprise-a11y-quality-gate",
  "version": "1.0.0",
  "description": "Multi-engine WCAG 2.2 AA / AODA accessibility testing framework with executive-ready HTML reports and Jira integration",
  "author": "Rod Dizon",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "a11y": "tsx scripts/run-a11y.ts",
    "a11y:axe": "tsx scripts/run-a11y.ts --engine axe",
    "a11y:tree": "tsx scripts/run-a11y.ts --engine tree",
    "a11y:lighthouse": "tsx scripts/run-a11y.ts --engine lighthouse",
    "a11y:wave": "tsx scripts/run-a11y.ts --engine wave",
    "a11y:wcag": "tsx scripts/run-wcag-audit.ts",
    "a11y:wave-browser": "tsx scripts/run-wave-browser.ts",
    "a11y:wave-to-jira": "tsx scripts/wave-capture-to-jira.ts",
    "a11y:all": "tsx scripts/run-a11y.ts --engine axe && tsx scripts/run-a11y.ts --engine lighthouse",
    "test": "playwright test",
    "test:a11y": "playwright test tests/accessibility-module.spec.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.0",
    "chrome-launcher": "^1.2.1",
    "commander": "^12.1.0",
    "csv-parse": "^5.6.0",
    "lighthouse": "^12.8.2",
    "playwright": "^1.49.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
